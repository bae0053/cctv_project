<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.kakao.sdk.link.sample.common.widget.KakaoDialogSpinner xmlns:kakao="http://schemas.android.com/apk/res/com.kakao.sdk.link.sample"
            android:id="@+id/send_type"
            style="@style/spinner"
            kakao:kakao_entries="@array/link_service_type"
            kakao:kakao_icon="@drawable/icon_link_01"
            kakao:kakao_prompt="@string/link_service_type" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/color4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/send"
                style="@style/button"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:background="@drawable/btn_b"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:text="@string/send_button" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>