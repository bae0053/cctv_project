<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/title"
            layout="@layout/view_sample_title"
            android:layout_width="fill_parent"
            android:layout_height="56dp" />

        <com.kakao.sdk.sample.common.widget.ProfileLayout
            android:id="@+id/com_kakao_user_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.kakao.sdk.sample.usermgmt.ExtraUserPropertyLayout
            android:id="@+id/extra_user_property"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/buttonMe"
                style="@style/button"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_01"
                android:text="@string/usermgmg_me_button" />

            <Button
                android:id="@+id/buttonUpdateProfile"
                style="@style/button"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_01"
                android:text="@string/usermgmg_update_profile_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/logout_button"
                style="@style/button"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_03"
                android:text="@string/com_kakao_logout_button" />

            <Button
                android:id="@+id/unlink_button"
                style="@style/button"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_02"
                android:text="@string/com_kakao_unlink_button" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/token_info_button"
                style="@style/button"
                android:layout_width="0dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/selector_button_01"
                android:text="@string/com_kakao_tokeninfo_button" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>